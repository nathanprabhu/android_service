<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.prabhunathan.cs478.p5.cs478_proj5_1_playerclient.MusicPlayer">
    <TextView
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Song Title"
        android:id="@+id/currentSong"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="28dp"
        android:gravity="center"
        android:textColor="#cdc8b1" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="PREV"
        android:id="@+id/prevButton"
        android:textSize="16dp"
        android:gravity="center"
        android:typeface="sans"
        android:textAlignment="center"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/currentSong"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="PLAY"
        android:id="@+id/playButton"
        android:textSize="16dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/prevButton"
        android:layout_alignStart="@+id/stopButton" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="NEXT"
        android:id="@+id/nextButton"
        android:textSize="16dp"
        android:editable="false"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/stopButton"
        android:layout_marginBottom="40dp" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="STOP"
        android:id="@+id/stopButton"
android:textSize="16dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_below="@+id/playButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
